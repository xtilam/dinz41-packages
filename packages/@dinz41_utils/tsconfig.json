{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "target": "ESNext",
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDeclarationOnly": true,
    "declaration": true,
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"],
  "exclude": ["./test"]
}
